<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.debug.core.launchConfigurationTypes">
      <launchConfigurationType
            delegate="descent.internal.launching.DescentLaunchConfigurationDelegate"
            id="descent.launching.localDApplication"
            modes="run, debug"
            name="D Application"/>
   </extension>
   <extension
         point="org.eclipse.debug.core.breakpoints">
      <breakpoint
            class="descent.launching.model.DescentLineBreakpoint"
            id="descent.launching.descentLineBreakpoint"
            markerType="descent.launching.descentLineBreakpointMarker"
            name="Ddbg Line Breakpoint"/>
   </extension>
   <extension
         id="descentLineBreakpointMarker"
         point="org.eclipse.core.resources.markers">
      <super type="org.eclipse.debug.core.lineBreakpointMarker"/>
      <persistent value="true"/>
   </extension>

</plugin>
