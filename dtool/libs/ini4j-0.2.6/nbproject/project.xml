<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://www.netbeans.org/ns/project/1">
    <type>org.netbeans.modules.ant.freeform</type>
    <configuration>
        <general-data xmlns="http://www.netbeans.org/ns/freeform-project/1">
            <!--Do not use Project Properties customizer when editing this file manually.-->
	    <name>ini4j</name>
            <properties>
              <property-file>build.properties</property-file>
              <property-file>${user.home}/build.properties</property-file>
            </properties>
            <folders>
                <source-folder>
                    <label>src</label>
                    <type>java</type>
                    <location>src/classes</location>
                </source-folder>
                <source-folder>
                    <label>test</label>
                    <type>java</type>
                    <location>src/test</location>
                </source-folder>
                <source-folder>
                    <label>sample</label>
                    <type>java</type>
                    <location>src/doc/sample</location>
                </source-folder>
            </folders>
            <ide-actions>
                <action name="build">
                    <target>build</target>
                </action>
                <action name="rebuild">
                    <target>clean</target>
                    <target>build</target>
                </action>
                <action name="clean">
                    <target>clean</target>
                </action>
                <action name="javadoc">
                    <target>javadoc</target>
                </action>
                <action name="doc">
                    <target>doc</target>
                </action>
                <action name="run">
                    <target>run</target>
                </action>
                <action name="test">
                    <target>test</target>
                </action>
                <action name="sample">
                    <target>sample</target>
                </action>
                <action name="dist">
                    <target>dist</target>
                </action>
                <action name="coverage">
                    <target>coverage</target>
                </action>
            </ide-actions>
            <view>
                <items>
                    <source-folder style="packages">
                        <label>Source Packages</label>
                        <location>src/classes</location>
                    </source-folder>
                    <source-folder style="packages">
                        <label>Test Packages</label>
                        <location>src/test</location>
                    </source-folder>
                    <source-folder style="packages">
                        <label>Sample Classes</label>
                        <location>src/doc/sample</location>
                    </source-folder>
                    <source-folder style="tree">
                        <label>Documentation</label>
                        <location>src/doc</location>
                    </source-folder>
                    <source-file>
                        <location>build.xml</location>
                    </source-file>
                </items>
                <context-menu>
                    <ide-action name="build"/>
                    <ide-action name="rebuild"/>
                    <ide-action name="clean"/>
                    <ide-action name="javadoc"/>
                    <ide-action name="run"/>
                    <ide-action name="test"/>
                    <action>
                     <label>Run Samples</label><target>sample</target>
                    </action>
                    <action>
                     <label>Create distribution</label><target>dist</target>
                    </action>
                    <action>
                     <label>Build documentation</label><target>doc</target>
                    </action>
                    <action>
                     <label>Coverage report</label><target>coverage</target>
                    </action>
                </context-menu>
            </view>
            <subprojects/>
        </general-data>
        <java-data xmlns="http://www.netbeans.org/ns/freeform-project-java/1">
            <compilation-unit>
		    <package-root>src/classes</package-root>
		    <package-root>src/test</package-root>
		    <package-root>src/doc/sample</package-root>
		    <classpath mode="boot">${build.classpath}</classpath>
                <source-level>1.5</source-level>
            </compilation-unit>
        </java-data>
    </configuration>
</project>
