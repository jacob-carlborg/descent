<project name="Melnorme-Bundler" default="build">
	
	<!-- NOTE: Requires Eclipse to perform the build -->

	<property file="bundler.properties"/>

	<property name="projectdir" value="${basedir}/../org.dsource.melnorme"/>
	<property name="library.output" value="${basedir}/lib/org.dsource.melnorme.jar"/>
	
	
	<target name="build" depends="" description="Default build cmd.">
		<jar destfile="${library.output}" manifest="${projectdir}/META-INF/MANIFEST.MF" >
			<fileset dir="${projectdir}/bin"/>
			<!-- <fileset dir="${projectdir}/src-coreutil"/> -->
			<filename name="${projectdir}/about.html"/>
		</jar>
	</target>
	
</project>